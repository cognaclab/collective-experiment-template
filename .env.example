# Collective Experiment Environment Configuration
# Copy this file to .env and customize for your setup

# =============================================================================
# APPLICATION URLS
# =============================================================================
# These are the URLs where your experiment will be accessible
APP_URL=http://localhost:8000
GAME_SERVER_URL=http://localhost:8181

# For production deployment, update these to your domain:
# APP_URL=https://your-domain.com
# GAME_SERVER_URL=https://your-domain.com:8181

# =============================================================================
# SERVER PORTS
# =============================================================================
# Ports for the web server and game server
WEB_PORT=8000
GAME_PORT=8181

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# MongoDB connection settings
# For local development with Docker: use the defaults below
# For production: update with your MongoDB credentials
# Single database for all experiments (experimentName field differentiates data)
MONGODB_URI=mongodb://localhost:27017/collective_experiments

# Production MongoDB example:
# MONGODB_URI=mongodb://username:password@host:port/database

# =============================================================================
# DATA STORAGE PATHS
# =============================================================================
# Where experimental data will be saved
DATA_DIR=./data
CSV_OUTPUT_DIR=./data/csv
LOG_DIR=./data/logs

# =============================================================================
# EXPERIMENT SETTINGS
# =============================================================================
# Session security (generate a strong random string for production)
SESSION_SECRET=your-session-secret-here

# Group formation settings
MAX_GROUP_SIZE=10        # Maximum participants per group
MIN_GROUP_SIZE=2         # Minimum participants needed to start
HORIZON=20              # Number of trials per game round
MAX_WAITING_TIME=120000 # Maximum wait time in milliseconds (2 minutes)

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Environment mode (development/production)
NODE_ENV=development

# Logging level (debug/info/warn/error)
LOG_LEVEL=debug

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================
# Uncomment and customize these for production deployment:
# NODE_ENV=production
# LOG_LEVEL=info
# SESSION_SECRET=generate-strong-secret-for-production